<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".Bookmark">

    <TextView
        android:id="@+id/txtbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bookmark"
        android:textSize="@dimen/_30sdp"
        android:textColor="#001D5B"
        android:fontFamily="@font/redhatdisplay_extrabold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bm_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtbm"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp" />

    <TextView
        android:id="@+id/tv_item"
        android:text="You don't have any bookmark"
        android:layout_centerInParent="true"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/redhatdisplay_medium"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

</RelativeLayout>