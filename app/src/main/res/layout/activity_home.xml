<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="40dp"
            android:layout_height="43dp"
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:backgroundTint="@color/main"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/redhatdisplay_bold"
            android:text="@string/hello"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:translationX="@dimen/_19sdp"
            android:translationY="@dimen/_60sdp" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="@dimen/_90sdp"
            android:layout_marginLeft="@dimen/_19sdp"
            android:fontFamily="@font/redhatdisplay_semibold"
            android:text="@string/user_name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/search_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/background_search"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:ems="8"
            android:hint="Search Here..."
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="16sp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bm_btn"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_bookmark_24"
            android:translationY="@dimen/_65sdp"
            app:borderWidth="0dp"
            app:fabCustomSize="40dp"
            app:tint="@color/navyblue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_130sdp"
           android:layout_marginHorizontal="@dimen/_8sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>