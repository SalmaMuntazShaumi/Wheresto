<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E9ECFB"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_wheresto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/redhatdisplay_bold"
            android:letterSpacing="0.06"
            android:text="Welcome Back!"
            android:textColor="#001D5B"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Sign in to continue"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Username"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txtusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#C4C4C4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Password"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#C4C4C4" />

        <Button
            android:id="@+id/btnsignin"
            android:layout_width="245dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:backgroundTint="#001D5B"
            android:fontFamily="@font/redhatdisplay_bold"
            android:text="Sign In"
            app:shapeAppearanceOverlay="@style/leaf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Forgot Password?"
            android:textSize="15dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/google_signin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/btn_facebook"
                android:backgroundTint="#E9ECFB"
                android:src="@drawable/google_crcl" />

            <ImageButton
                android:id="@+id/btn_facebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="#E9ECFB"
                android:src="@drawable/facebook_circle" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Don't have an account?"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons"
            android:layout_toRightOf="@id/tv_text"
            android:fontFamily="@font/redhatdisplay_bold"
            android:letterSpacing="0.1"
            android:text="Sign In"
            android:textColor="#001D5B"
            android:textSize="15dp" />

    </RelativeLayout>
</RelativeLayout>