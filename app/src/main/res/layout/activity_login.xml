<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:backgroundTint="#E9ECFB"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/logo_wheresto" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_marginLeft="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhatdisplay_bold"
            android:letterSpacing="0.06"
            android:text="Welcome Back!"
            android:textColor="#001D5B"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Sign in to continue"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Username"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txtusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#C4C4C4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Password"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C4C4C4"
            android:password="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5">

        <Button
            android:id="@+id/btnsignin"
            android:layout_width="245dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/navyblue"
            android:fontFamily="@font/redhatdisplay_bold"
            android:text="Sign In"
            app:shapeAppearanceOverlay="@style/leaf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Forgot Password?"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fbic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fb_icon"
            android:layout_marginRight="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/googleic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google_icon" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons"
            android:fontFamily="@font/redhatdisplay_medium"
            android:letterSpacing="0.1"
            android:text="Don't have an account?"
            android:textColor="#7E7E7E"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_buttons"
            android:layout_toRightOf="@id/tv_text"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/redhatdisplay_bold"
            android:letterSpacing="0.1"
            android:text="Sign In"
            android:textColor="#001D5B"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>