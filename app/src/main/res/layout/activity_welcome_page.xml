<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WelcomePage"
    android:background="@color/bluesky">

    <ImageView
        android:id="@+id/img_list"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/logo_wheresto"/>

    <ImageView
        android:id="@+id/welcomeimg"
        android:layout_width="500dp"
        android:layout_marginTop="90dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/wavybuddies" />

    <TextView
        android:id="@+id/hello_txt"
        android:fontFamily="@font/redhatdisplay_extrabold"
        android:text="HELLO!"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:translationY="400dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text1"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Welcome to WHERESTO!"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:translationY="440dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text2"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="find foods, wherever!"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:translationY="455dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:translationY="495dp"
        android:layout_marginLeft="75dp"
        app:shapeAppearanceOverlay = "@style/leaf"
        android:backgroundTint="@color/navyblue"
        android:text="Sign In"/>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:translationY="495dp"
        android:layout_marginLeft="245dp"
        app:borderWidth="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/navyblue"
        app:shapeAppearanceOverlay = "@style/leaf"
        android:text="Sign Up"/>
    <TextView
        android:id="@+id/text3"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Or via social media"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:translationY="570dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/fbic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:translationY="610dp"
        android:layout_marginLeft="110dp"
        android:src="@drawable/fb_icon"/>
    <ImageView
        android:id="@+id/googleic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:translationY="610dp"
        android:layout_marginLeft="265dp"
        android:src="@drawable/google_icon"/>

</RelativeLayout>