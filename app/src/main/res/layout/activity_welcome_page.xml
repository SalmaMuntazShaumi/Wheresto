<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/bluesky"
    android:orientation="vertical"
    tools:context=".WelcomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo_wheresto" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/welcomeimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wavybuddies" />

        <TextView
            android:id="@+id/hello_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeimg"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/redhatdisplay_extrabold"
            android:text="HELLO!"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hello_txt"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/redhatdisplay_regular"
                android:text="Welcome to WHERESTO!"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/redhatdisplay_regular"
                android:text="find foods, wherever!"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/navyblue"
            android:text="Sign In"
            app:shapeAppearanceOverlay="@style/leaf" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            android:text="Sign Up"
            android:textColor="@color/navyblue"
            app:borderWidth="10dp"
            app:shapeAppearanceOverlay="@style/leaf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/redhatdisplay_regular"
            android:text="Or via social media"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <ImageView
                android:id="@+id/fbic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fb_icon"
                android:layout_marginRight="@dimen/_25sdp"/>

            <ImageView
                android:id="@+id/googleic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google_icon" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>